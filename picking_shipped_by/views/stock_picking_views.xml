    <record id="picking_shipped_by_view_picking_form" model="ir.ui.view">
        <field name="name">picking.shipped.by.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field
                    name="shipped_by_id"
                    options="{'no_create_edit': True, 'no_create': True}"
                />
                <field name="is_shipped" />
            </field>
        </field>
    </record>
    <record id="picking_shipped_by_vpicktree" model="ir.ui.view">
        <field name="name">picking.shipped.by.vpicktree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="weight" position="after">
                <field name="is_shipped" optional="hide" />
            </field>
            <field name="scheduled_date" position="before">
                <field name="shipped_by_id" />
            </field>
        </field>
    </record>
    <record id="picking_shipped_by_view_picking_internal_search" model="ir.ui.view">
        <field name="name">picking.shipped.by.view.picking.internal.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <filter name="activities_overdue" position="before">
                <filter
                    string="Shipped"
                    name="picking_shipped"
                    domain="[('is_shipped', '=', True)]"
                />
                <filter
                    string="Not Shipped"
                    name="picking_not_shipped"
                    domain="[('is_shipped', '=', False)]"
                />
                <separator />
            </filter>
            <filter name="picking_type" position="after">
                <filter
                    string="Shipper"
                    name="shipper_group"
                    domain="[]"
                    context="{'group_by': 'shipped_by_id'}"
                />
                <filter
                    string="Shipped"
                    name="shipped_group"
                    domain="[]"
                    context="{'group_by': 'is_shipped'}"
                />
            </filter>
        </field>
    </record>
</odoo>
